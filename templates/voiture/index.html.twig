{% extends 'base.html.twig' %}

{% block title %}Voiture index{% endblock %}

{% block body %}
    <h1>Voiture index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Immatriculation</th>
                <th>Marque</th>
                <th>Modele</th>
                <th>Finition</th>
                <th>DateAchat</th>
                <th>Energie</th>
                <th>CvFiscale</th>
                <th>CvDin</th>
                <th>Vente</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
            {% for voiture in voitures %}
                {{dump(voiture)}}
                {% for image in voiture.fkUploadVoitureImage %}
                    {{dump(image)}}
                    <img src="{{asset('uploads/images/' ~ image.image)}}" alt="Smiley face" width="300">

                {% endfor %}
                <tr>
                    <td>{{ voiture.id }}</td>
                    <td>{{ voiture.immatriculation }}</td>
                    <td>{{ voiture.marque }}</td>
                    <td>{{ voiture.modele }}</td>
                    <td>{{ voiture.finition }}</td>
                    <td>{{ voiture.dateAchat ? voiture.dateAchat|date('Y-m-d') : '' }}</td>
                    <td>{{ voiture.energie }}</td>
                    <td>{{ voiture.cvFiscale }}</td>
                    <td>{{ voiture.cvDin }}</td>
                    <td>{{ voiture.vente ? 'Yes' : 'No' }}</td>
                    <td>
                        <a href="{{ path('voiture_show', {'id': voiture.id}) }}">show</a>
                        <a href="{{ path('voiture_edit', {'id': voiture.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="11">no records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('voiture_new') }}">Create new</a>
{% endblock %}
